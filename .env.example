APP_NAME=REDiAPI
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.redcomunicacionmovil.mx

# Token interno para comunicación segura
CHIP_API_TOKEN=

# Idioma
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_MX

# Logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# --- Base de datos ---
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=red_com_movil
DB_USERNAME=usuario
DB_PASSWORD=contraseña

# --- Sesión ---
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# --- Colas y caché ---
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# --- Redis (opcional) ---
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# --- Email (opcional) ---
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@redcomunicacionmovil.mx"
MAIL_FROM_NAME="${APP_NAME}"

# --- AWS (no usado) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# --- Integración con RED Comunicación Móvil ---
RED_API_URL=https://sistema.redcomunicacionmovil.mx/api
RED_API_TOKEN=

# --- Configuración extra ---
CORS_ALLOWED_ORIGINS=*
VITE_APP_NAME="${APP_NAME}"
